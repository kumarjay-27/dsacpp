class Solution {
public:
    bool check(vector<int>& nums) {
        for (int i = 1; i < nums.size(); i++) {
            if (nums[i] < nums[i - 1]) {
                reverse(nums.begin(), nums.begin() + i);
                reverse(nums.begin() + i, nums.end());
                reverse(nums.begin(), nums.end());
                for (int j = 1; j < nums.size(); j++) {
                    if (nums[j] < nums[j - 1])
                        return false;
                }
                return true;
            }
        }

        return true;
    }
};
