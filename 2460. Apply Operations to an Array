class Solution {
public:
    vector<int> applyOperations(vector<int>& nums) {
        vector<int> answer;
        int count=0;
        for(int i=0;i<nums.size()-1;i++)
        {
            if(nums[i]==nums[i+1])
            {
               nums[i]=nums[i]*2;
               nums[i+1]=0;
            }
        }
        for(auto ele:nums)
        {
            if(ele!=0)
            {
                answer.push_back(ele);

            }
            else
            {
                count++;
            }
        }
        while(count!=0)
        {
            answer.push_back(0);
            count--;
        }
        return answer;
    }
};
