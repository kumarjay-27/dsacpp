class Solution {
public:
    int findMaxConsecutiveOnes(vector<int>& nums) {
        int answer = 0;
        int value = 0;
        for (int i = 0; i < nums.size(); i++) {
            if (nums[i] == 1) {
                answer++;
            } else {
                if (value < answer) {

                    value = answer;
                    answer = 0;
                }
                else {
                        answer = 0;
                    }
                }
            }
            if (value < answer) {

                value = answer;
            }
        return value;
    }
};
