class Solution {
public:
    int numWaterBottles(int numBottles, int numExchange) {
        int count=numBottles;
        while(numBottles>=numExchange){
            int newB =numBottles/numExchange;
            count+=newB;
            numBottles=numBottles%numExchange+newB;
        }
        return count;
    }
};
