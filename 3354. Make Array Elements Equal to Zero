class Solution {
public:
    int countValidSelections(vector<int>& nums) {
        int n = nums.size();
        int ans = 0;

        for (int start = 0; start < n; start++) {
            if (nums[start] != 0) continue;

            for (int dir = -1; dir <= 1; dir += 2) { // -1 = left, +1 = right
                vector<int> a = nums;
                int curr = start;
                int d = dir;

                while (curr >= 0 && curr < n) {
                    if (a[curr] == 0) {
                        curr += d;
                    } else {
                        a[curr]--;
                        d = -d;
                        curr += d;
                    }
                }

                bool ok = true;
                for (int x : a) {
                    if (x != 0) {
                        ok = false;
                        break;
                    }
                }

                if (ok) ans++;
            }
        }

        return ans;
    }
};
