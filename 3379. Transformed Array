class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
        int n = nums.size();
        vector<int> result(n);
        for(int i=0;i<n;i++){
            if(nums[i]>0){
                int st = (i + nums[i]) % n;
                result[i] = nums[st];
            }
            else if(nums[i]<0){
                int st = (i + nums[i]) % n;
                if (st < 0) st += n;
                result[i] = nums[st];
            }
            else if(nums[i]==0) result[i]=0;
        }
        return result;
        
    }
};
