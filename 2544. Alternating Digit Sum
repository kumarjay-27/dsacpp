class Solution {
public:
    int alternateDigitSum(int n) {
        int result = 0;
        int digits = 0, temp = n;
        while (temp > 0) {
            digits++;
            temp /= 10;
        }

        int i = digits - 1;

        while(n>0){
            int x=n%10;
            result=result+pow(-1,i)*x;
            n=n/10;
            i++;
        }
        return result;
        
    }
};
