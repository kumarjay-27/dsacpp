class Solution {
public:
    int clumsy(int n) {
        stack<int>st;
        st.push(n);
        n--;
        int op=0;
        while(n>0){
            if(op==0){
                int t=st.top();st.pop();
                st.push(t*n);
                op+=1;
            }
            else if(op==1){
                int t=st.top();st.pop();
                st.push(t/n);
                op+=1;
            }
            else if(op==2){
                st.push(+n);
                op+=1;
            }
            else{
                st.push(-n);
                op=0;
            }
            n--;
        }
        int ans=0;
        while(!st.empty()){
            ans= ans+st.top();
            st.pop();
        }
        return ans;
    }
};
