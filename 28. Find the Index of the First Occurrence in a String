class Solution {
public:
    int strStr(string haystack, string needle) {
        int n=haystack.length();
        int ans=0;
        bool val=false;
        for(int i=0;i<n;i++){
            if(haystack[i]==needle[0])
            {
                int l=needle.length();
                for(int j=0;j<l;j++){
                    if(i+j>n) break;
                    else if(haystack[i+j]==needle[j])
                    { val=true;
                      ans=i;
                    }
                    else{ 
                        val= false; 
                        break;
                         }

                }
                if (val==true) return ans;
               
            }
        }
        
        return -1;
        
    }
};
