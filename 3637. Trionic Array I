class Solution {
public:
    bool isTrionic(vector<int>& nums) {
        int n = nums.size();
        int i = 0;
        while (i < n - 1 && nums[i] < nums[i + 1])
            i++;
        if (i == n - 1 || i == 0)
            return false;
        while (i < n - 1 && nums[i] > nums[i + 1])
            i++;
        if (i == n - 1)
            return false;
        while (i < n - 1 && nums[i] < nums[i + 1])
            i++;
        return i == n - 1;
    }
};
