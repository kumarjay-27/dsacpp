class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int ct=1;
        int ans=0;
        if(nums.empty()) return 0;
        if(nums.size()==1) return 1;
        sort(nums.begin(),nums.end());
        for(int i=0;i<nums.size()-1;i++)
        {
            if(nums[i+1]==nums[i]+1) ct++;
            else if(nums[i+1]==nums[i]) continue;
            else {
                ans=max(ans,ct);
                ct=1;
            }
        }
        ans=max(ans,ct);
        return ans;
    }
};
