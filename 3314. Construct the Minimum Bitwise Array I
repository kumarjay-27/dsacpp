class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> ans;

        for (int p : nums) {
            if (p % 2 == 0) {
                ans.push_back(-1);
                continue;
            }

            int k = 0;
            int temp = p;
            while (temp & 1) {
                k++;
                temp >>= 1;
            }

            int m = k - 1;
            int x = ((p >> (m + 1)) << (m + 1)) + ((1 << m) - 1);
            ans.push_back(x);
        }

        return ans;
    }
};
