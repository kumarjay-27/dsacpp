class Solution {
public:
    string minRemoveToMakeValid(string s) {
        int ct = 0;
        int n = s.length();
        for (int i = 0; i < n; i++) {
            if (s[i] == '(')
                ct ++ ;
            else if (s[i] == ')') {
                if (ct == 0)
                    s[i] = '#';
                else
                    ct--;
            }
        }
            int cot = 0;
            for (int i = n - 1; i >= 0; i--) {
            if(s[i]==')') cot++;
            else if(s[i]=='('){
                    if (cot == 0)
                        s[i] = '#';
                    else
                        cot--;
            }
            }
        
            string ans;
            for (int i = 0; i < n; i++) {
                if (s[i] != '#')
                    ans.push_back(s[i]);
            }
            return ans;
        }
    };
