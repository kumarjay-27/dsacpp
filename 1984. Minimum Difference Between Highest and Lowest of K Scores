class Solution {
public:
    int minimumDifference(vector<int>& nums, int k) {
        int n= nums.size();
        int diff= INT_MAX;
        sort(begin(nums),end(nums));
        for(int i= k-1;i<n;i++){
            int mi =nums[i-k+1];
            int ma = nums[i];
            diff= min(diff, ma- mi);
        }
        return diff;
        
    }
};
